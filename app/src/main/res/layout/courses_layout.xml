<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/course_list_card_view"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:background="@color/basic_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/courses_relative_layout"
            android:background="@color/basic_bg"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/course_name_text_view"
                android:text="Course1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/basic_bg"
                android:textColor="@color/orange"
                android:padding="14dp"
                android:layout_marginRight="5dp"
                />

            <Button
                android:layout_toRightOf="@id/course_name_text_view"
                android:id="@+id/mark_attendance_courses_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_marginRight="5dp"
                android:background="@color/basic_bg"
                android:padding="5dp"
                android:text="@string/mark_attendance"/>
            <Button
                android:id="@+id/summary_courses_layout"
                android:layout_toRightOf="@id/mark_attendance_courses_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:background="@color/basic_bg"
                android:text="@string/show_summary"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>