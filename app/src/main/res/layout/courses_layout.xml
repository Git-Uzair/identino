<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_gray"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/course_list_card_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/theme_gray"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/courses_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_gray"
            android:padding="17dp">

            <TextView
                android:id="@+id/course_name_text_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/theme_gray"
                android:padding="14dp"
                android:layout_marginTop="14dp"
                android:text="Course1"
                android:textColor="@color/orange"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/course_name_text_view"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mark_attendance_courses_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_second"
                    android:fontFamily="@font/product_sans"
                    android:padding="5dp"
                    android:text="@string/mark_attendance"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/summary_courses_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_second"
                    android:fontFamily="@font/product_sans"
                    android:text="@string/show_summary"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>