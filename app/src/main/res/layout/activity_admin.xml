<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/basic_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">
    <RelativeLayout
        android:id="@+id/admin_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/admin_sign_out_button"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_signout1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/admin_name_text_view"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/theme_gray"
            android:textColor="@color/orange"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/admin_add_instructor_card_view"
            android:layout_below="@+id/admin_name_text_view"
            android:layout_marginHorizontal="35dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp">
            <Button
                android:id="@+id/admin_add_instructor_button"
                android:background="@color/theme_gray"
                android:text="@string/admin_add_instructor_str"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:textColor="@color/orange"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/admin_add_student_card_view"
            android:layout_below="@+id/admin_name_text_view"
            android:layout_toRightOf="@+id/admin_add_instructor_card_view"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <Button
                android:id="@+id/admin_add_student_button"
                android:background="@color/theme_gray"
                android:text="@string/admin_add_student_str"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:layout_gravity="bottom"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/admin_remove_instructor_card_view"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            android:layout_below="@id/admin_add_instructor_card_view">
            <Button
                android:id="@+id/admin_remove_instructor_button"
                android:background="@color/theme_gray"
                android:text="@string/admin_remove_instructor_str"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/admin_remove_student_card_view"
            android:layout_marginHorizontal="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            android:layout_below="@+id/admin_add_student_card_view"
            android:layout_toRightOf="@+id/admin_remove_instructor_card_view">
            <Button
                android:id="@+id/admin_remove_student_button"
                android:background="@color/theme_gray"
                android:text="@string/admin_remove_student_str"
                android:padding="10dp"
                android:layout_below="@id/admin_add_student_button"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</LinearLayout>